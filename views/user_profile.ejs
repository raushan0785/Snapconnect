
<h1>
    Codeial / Profile Page
</h1>

<p><%=user.name %></p>
<p><%=user.email %></p>
<% if (user) { %>
    <li>
        <a href="/users/profile"><%= locals.user.name %></a>
    </li>
    <li>
        <a href="/users/sign-out">Sign Out</a>
    </li>
    <% } else { %>
    <li>
        <a href="/users/sign-in">Sign In</a>
    </li>
    <li>
        <a href="/users/sign-up">Sign Up</a>
    </li>
    <% } %>